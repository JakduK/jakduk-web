<!DOCTYPE html>
<!--[if IE 9]><html lang="{{locale}}" class="ie9"><![endif]-->
<!--[if !IE]><!--><html lang="{{locale}}"><!--<![endif]-->
{{#if baseHref}}
  <base href="{{baseHref}}">
{{/if}}
  <head>
    <title>{{{TITLE title}}}</title>
    {{> meta}}
    <link rel="shortcut icon" href="/static/jakduk/img/logo_16.png" sizes="16x16">
    <link rel="shortcut icon" href="/static/jakduk/img/logo_32.png" sizes="32x32">
    <link rel="shortcut icon" href="/static/jakduk/img/logo_196.png" sizes="196x196">

    {{#unless @root.isNewDesign}}
      {{> css}}
    {{/unless}}

    {{{INJECT 'css'}}}

    <!--[if lt IE 9]>
    <script src="/static/unify/assets/plugins/respond.js"></script>
    <script src="/static/unify/assets/plugins/html5shiv.js"></script>
    <script src="/static/unify/assets/plugins/placeholder-IE-fixes.js"></script>
    <![endif]-->

    <script type="text/javascript">
      var require = {
        paths: {
          {{#if (SUMMERNOTE_LOCALE locale)}}
            'summernote-{{SUMMERNOTE_LOCALE locale}}': '/static/bower_components/summernote/lang/summernote-{{SUMMERNOTE_LOCALE locale}}',
          {{/if}}
          'angular-locale': '/static/bower_components/angular-i18n/angular-locale_{{locale}}'
        },
        shim: {
          {{#if (SUMMERNOTE_LOCALE locale)}}
            'summernote-{{SUMMERNOTE_LOCALE locale}}': {
              deps: ['jquery', 'summernote']
            },
          {{/if}}
          'angular-locale': {
            deps: ['jquery', 'angular']
          }
        }
      };
    </script>
    <script src="/static/bower_components/requirejs/require.js"></script>
    <script src="/static/jakduk/js/config.js"></script>
  </head>
  <body class="{{bodyClass}}">
    <!--[if lt ie 10]>
    <div class="old-browser">{{TRANSLATION 'msg.recommend.browser'}}</div>
    <![endif]-->
    {{{body}}}
    {{{INJECT 'js'}}}
    {{#if gaAccount}}
    <script type="text/javascript">
      (function (i, s, o, g, r, a, m) {i['GoogleAnalyticsObject'] = r;i[r] = i[r] || function () {(i[r].q = i[r].q || []).push(arguments)}, i[r].l = 1 * new Date();a = s.createElement(o),m = s.getElementsByTagName(o)[0];a.async = 1;a.src = g;m.parentNode.insertBefore(a, m)})(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
      (function () {
        ga('create', '{{gaAccount}}', {{{TERNARY userInfo.username (CONCAT '{userId:"' userInfo.username '"}') '"auto"'}}});
        ga('send', 'pageview');
      }());
    </script>
    {{/if}}
  </body>
</html>

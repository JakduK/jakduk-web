<div class="wrapper">

  {{> navigation}}

  <!--=== Breadcrumbs ===-->
  <div class="breadcrumbs">
    <div class="container">
      <h1 class="pull-left">{{TRANSLATION "user.sign.forgot.password"}}</h1>
    </div><!--/container-->
  </div><!--/breadcrumbs-->
  <!--=== End Breadcrumbs ===-->

  <div class="container content">

    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <div class="reg-page">
          <div class="reg-header">
            <h2>{{TRANSLATION "user.sign.reset.password"}}</h2>
          </div>

          <div class="form-group">
            <h4 class="text-center">{{subject}}</h4>
            <p>{{message}}</p>
          </div>

          <button type="button" class="btn btn-info btn-block rounded" onclick="window.location='/login'">
          {{TRANSLATION "common.button.back.to.login"}}
          </button>
        </div>
      </div>
    </div><!--/row-->
  </div>

  {{> footer}}

</div><!-- /.container -->
{{#CHUNK 'js'}}
  <script type="text/javascript">
    require([
      'angular', 'jakduk'
    ], function (angular) {
      angular.module("jakdukApp", ['jakdukCommon']);
      angular.bootstrap(document, ['jakdukApp']);
    });
  </script>
{{/CHUNK}}


<!DOCTYPE html>
<html lang="{{@root.locale}}">
{{#if @root.baseHref}}
  <base href="{{@root.baseHref}}">
{{/if}}
  <head>
    <title>{{{TITLE @root.title}}}</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="{{@root.meta.og.description}}" name="description">
    <meta content="{{@root.meta.og.author}}" name="author">

    <meta content="{{{TITLE @root.title}}}" property="og:title">
    <meta content="{{@root.meta.og.image}}" property="og:image">
    <meta content="{{@root.meta.og.url}}" property="og:url">
    <meta content="{{@root.meta.og.description}}" property="og:description">
    <meta content="{{@root.meta.og.type}}" property="og:type">

    <meta content="{{@root.meta.twitter.card}}" name="twitter:card">
    <meta content="{{{TITLE @root.title}}}" name="twitter:title">
    <meta content="{{@root.meta.og.description}}" name="twitter:description">
    <meta content="{{@root.meta.og.image}}" name="twitter:image">

    <meta content="{{@root.meta.facebook.appId}}" property="fb:app_id">

    <link rel="shortcut icon" href="/assets/jakduk/img/logo_16.png?{{@root.revision}}" sizes="16x16">
    <link rel="shortcut icon" href="/assets/jakduk/img/logo_32.png?{{@root.revision}}" sizes="32x32">
    <link rel="shortcut icon" href="/assets/jakduk/img/logo_196.png?{{@root.revision}}" sizes="196x196">

    {{#if @root.isIE}}<script src="/assets/babel-polyfill/dist/polyfill.js?{{@root.revision}}"></script>{{/if}}

    <script>
      window.ENV = {
      {{#if @root.err}}
        err: {{{JSON_STRINGIFY @root.err}}},
      {{/if}}
      {{#if @root.userInfo}}
        myProfile: {{{JSON_STRINGIFY @root.userInfo}}},
      {{/if}}
        imageServerUrl: '{{thumbnailServerUrl}}',
        revision: '{{@root.revision}}',
        locale: '{{@root.locale}}',
        shortLocale: '{{SHORT_LOCALE @root.locale}}',
        kakaoClientID: '{{kakaoClientID}}'
      };
    </script>
  </head>
  <body class="{{@root.bodyClass}}">
    <!--[if lt ie 10]>
    <div class="old-browser">{{TRANSLATION 'msg.recommend.browser'}}</div>
    <![endif]-->

    <!--phone sidenav-->
    <div id="phoneSidenav"></div>

    <!--navbar-->
    <div id="navbar"></div>

    <!--main-->
    <div id="main"></div>

    <script src="/assets/vendor.js?{{@root.revision}}"></script>
    <script src="/assets/app.js?{{@root.revision}}"></script>

    {{#if @root.gaAccount}}
      <script type="text/javascript">
        (function (i, s, o, g, r, a, m) {i['GoogleAnalyticsObject'] = r;i[r] = i[r] || function () {(i[r].q = i[r].q || []).push(arguments)}, i[r].l = 1 * new Date();a = s.createElement(o),m = s.getElementsByTagName(o)[0];a.async = 1;a.src = g;m.parentNode.insertBefore(a, m)})(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
        (function () {
          ga('create', '{{gaAccount}}', {{{TERNARY @root.userInfo.username (CONCAT '{userId:"' @root.userInfo.username '"}') '"auto"'}}});
          ga('send', 'pageview');
        }());
      </script>
    {{/if}}
  </body>
</html>

{
  "apps" : [{
    "name": "jakduk-web",
    "script": "bin/www",
    "max_memory_restart": "200M",
    "exec_mode"  : "cluster",
    "instances"  : "max",
    "error_file": ".logs/err.log",
    "out_file": ".logs/out.log",
    "env": {
      "NODE_ENV": "development",
      "DEBUG": "jakduk,jakduk:*"
    },
    "env_staging" : {
      "ENV": "staging",
      "NODE_ENV": "production"
    },
    "env_production" : {
      "ENV": "prod",
      "NODE_ENV": "production"
    }
  }]
}
